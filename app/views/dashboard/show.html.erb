<h1><%= @big_hairy.name %>'s Dashboard</h1>

<%= image_tag @big_hairy.profile_pic %>

<div>
  Number of starred repos: <%= @big_hairy.starred_repos %>
</div>


<h3>Followers</h3>
<ul>
  <% @big_hairy.followers.each do |follower| %>
    <li><%= follower %></li>
  <% end %>
</ul>

<h3>Following</h3>
<ul>
  <% @big_hairy.following.each do |user| %>
    <li><%= user %></li>
  <% end %>
</ul>

<h3>Repositories</h3>
<ul>
  <% @big_hairy.repositories.each do |repo| %>
    <li><%= repo %></li>
  <% end %>
</ul>

<h3>Organizations</h3>
<ul>
  <% @big_hairy.organizations.each do |org| %>
    <li><%= org %></li>
  <% end %>
</ul>
